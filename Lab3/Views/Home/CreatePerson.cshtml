@{
    Layout = "_Layout";
}

<h3>Create your favorite Person</h3>
<form asp-controller="Home" asp-action="DisplayPerson" method="post">
    <table class= "center2">
        <tr>
            <td>First Name:</td>
            <td><input type="text" name="firstName" /></td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td><input type="text" name="lastName" /></td>
        </tr>
        <tr>
            <td>Age:</td>
            <td><input type="number" name="age" /></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input type="email" name="emailaddresss" /></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="password" name="pass" /></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input type="text" name="desc" /></td>
        </tr>
    </table>
    <br>
    <input type="submit" value="Create" />
    <br>
   </form>
